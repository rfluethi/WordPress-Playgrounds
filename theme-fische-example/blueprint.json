{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "preferredVersions": {
    "php": "8.3",
    "wp": "latest"
  },
  "features": {
    "networking": true
  },
  "steps": [
    {
      "step": "installTheme",
      "themeData": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/rfluethi/WordPress-Playgrounds/main/theme-fische-example/twentytwentyfive-fische-updated.zip"
      }
    },
    {
      "step": "activateTheme",
      "themeFolderName": "twentytwentyfive"
    },
    {
      "step": "importWxr",
      "file": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/rfluethi/WordPress-Playgrounds/main/theme-fische-example/fische.xml"
      }
    },
    {
      "step": "setSiteOptions",
      "options": {
        "blogname": "FISCHE",
        "blogdescription": "Naturwunder unter Wasser",
        "start_of_week": "1",
        "timezone_string": "Europe/Zurich",
        "date_format": "j. F Y",
        "time_format": "H:i",
        "show_on_front": "page",
        "page_on_front": 2,
        "posts_per_page": 6
      }
    },
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_DEBUG": true,
        "WP_DEBUG_LOG": true,
        "WP_DEBUG_DISPLAY": false,
        "SCRIPT_DEBUG": true,
        "WP_ENVIRONMENT_TYPE": "development"
      }
    }
  ]
}
