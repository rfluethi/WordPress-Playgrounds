{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "preferredVersions": {
    "php": "8.3",
    "wp": "latest"
  },
  "features": {
    "networking": true
  },
  "steps": [
    {
      "step": "installTheme",
      "themeData": {
        "resource": "wordpress.org/themes",
        "slug": "twentytwentyfour"
      },
      "options": {
        "activate": true,
        "importStarterContent": true
      }
    },
    {
      "step": "setSiteOptions",
      "options": {
        "blogname": "üê† FISCHE - Naturwunder unter Wasser",
        "blogdescription": "Entdecke die faszinierende Welt der Aquaristik"
      }
    },
    {
      "step": "importThemeStarterContent",
      "themeSlug": "twentytwentyfour"
    },
    {
      "step": "runPHP",
      "code": "<?php require_once 'wordpress/wp-load.php'; echo 'Mediathek-Bilder: ' . count(get_posts(['post_type' => 'attachment', 'post_status' => 'inherit', 'numberposts' => -1])) . ' Dateien gefunden'; ?>"
    }
  ]
}
